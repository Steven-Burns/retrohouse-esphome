// For format details, see https://aka.ms/devcontainer.json. 
// For config options, see the README at: https://github.com/devcontainers/templates/tree/main/src/debian
// pre-defined variables: https://containers.dev/implementors/json_reference/#variables-in-devcontainerjson
{
  "name": "retro-ESPHomeInAContainer",
  "dockerFile": "Dockerfile",

//   "postCreateCommand": 
//   [
//     "script/devcontainer-post-create"
//   ],

	// Features to add to the dev container. More info: https://containers.dev/features.
   "features": 
   {
    // someday, it might be worth experimenting with installing powershell via the dockerfile.
    "ghcr.io/devcontainers/features/powershell:1": { }
   },

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"

  "runArgs": 
  [
    "--privileged",
    "-e",
    "GIT_EDITOR=code --wait"
    // uncomment and edit the path in order to pass though local USB serial to the container
    // , "--device=/dev/ttyACM0"
  ],
  
  "mounts": 
  [
    // this is convenient for copying files back and forth between the (Windows) host and the container
    "type=bind,source=c:\\temp,target=/host/temp"
  ],

  // This is a reference to a named docker volume that is assumed to already exist (created manually
  // in docker desktop, or via a docker compose).  Clone the repo into a folder named retrohouse-esphome 
  // in the named volume. 
  "workspaceMount": "type=volume,source=retrohouse-esphome-main,target=/workspace",
  "workspaceFolder": "/workspace",

  "customizations": 
  {
    "vscode": 
    {
      "extensions": 
      [
        // yaml
        "redhat.vscode-yaml",
        // cpp
        "ms-vscode.cpptools"
        // this gets added automagically with the powershell feature, above: 
        // "ms-vscode.powershell",        
      ],
      "settings": 
      {
        "yaml.customTags": 
        [
          "!secret scalar",
          "!lambda scalar",
          "!extend scalar",
          "!remove scalar",
          "!include_dir_named scalar",
          "!include_dir_list scalar",
          "!include_dir_merge_list scalar",
          "!include_dir_merge_named scalar"
        ],
        "files.exclude": 
        {
          "**/.git": true,
          "**/.DS_Store": true,
          "**/*.pyc": 
          {
            "when": "$(basename).py"
          },
          "**/__pycache__": true
        },
        "files.associations": 
        {
          "**/.vscode/*.json": "jsonc"
        }
      }
    }
  }
}